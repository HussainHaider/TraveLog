        </div>
    </div>
    <div class="add_new_div">
        <button class="btn add_new" data-toggle="modal" data-target="#exampleModal">+Add New</button>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 active_box" id="Trip_1" onclick="ShowTrips(Trip_1)" style="margin-left: 2%;">
                <h3>Within City Trips</h3>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3" id="Trip_2" onclick="ShowTrips(Trip_2)">
                <h3>Out of City Trips</h3>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3" id="Trip_3" onclick="ShowTrips(Trip_3)">
                <h3>Out of State Trips</h3>
            </div>
        </div>
    </div>
    <div class="container" id="Trips_Div" style="display: none;">
        <div class="row">
            {{#each anyArray}}
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="./images/_full.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title" style="text-align: center">Journal title</h5>
                        <div style="text-align: center">
                            <a href="/profile/profileJournal" class="btn btn-primary">Show</a>
                            <a href="#" class="btn btn-color">Edit</a>
                            <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#DeleteModal">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

    <div class="circle" id="loader">
        <div class="circle__mask on-left">
            <div class="circle__inner"></div>
        </div>
        <div class="circle__mask on-right">
            <div class="circle__inner"></div>
        </div>
        <div class="circle__holder"></div>
    </div>

</div>

<!--  Add Diary Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Diary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/addDiary" role="form">
                    <div class="form-group">
                        <label for="TitleInput">Title</label>
                        <input type="text" name="title" class="form-control" id="TitleInput"  aria-describedby="TitleInput">

                    </div>
                    <div class="form-group">
                        <label for="DescriptionInput">Description</label>
                        <textarea type="text" name="Description" class="form-control" cols="60" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Select type</label>
                        <select class="form-control" id="exampleFormControlSelect2" name="tripType">
                            <option>Within City Trips</option>
                            <option>Out of City Trips</option>
                            <option>Out of State Trips</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="filevalue">Add Picture or Video</label>
                        <input type="file" class="btn" id="filevalue" name="uploadFile">
                    </div>

                    <!--<div style="margin-bottom: 2%;">-->
                        <!--75% Completed <span class="pull-right">Please wait...</span>-->
                        <!--<div class="progress">-->
                            <!--<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>-->
                        <!--</div>-->
                    <!--</div>-->

                    <div class="form-actions" style="text-align: right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-color">Save changes</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<!--  END -->

<!--  Delete Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Diary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you Sure to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<!--  END -->

