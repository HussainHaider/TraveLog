<!--  Add Diary Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Diary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/addDiary" role="form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="TitleInput">Title</label>
                        <input type="text" name="title" class="form-control" id="TitleInput"  aria-describedby="TitleInput">

                    </div>
                    <div class="form-group">
                        <label for="DescriptionInput">Description</label>
                        <textarea type="text" name="Description" class="form-control" cols="60" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Select type</label>
                        <select class="form-control" id="exampleFormControlSelect2" name="tripType">
                            <option>Within City Trips</option>
                            <option>Out of City Trips</option>
                            <option>Out of State Trips</option>
                        </select>
                    </div>

                    <div id="map" style="height: 150px;"></div>
                    <script>
                        var key = 'cf0e4a0e194f14';
                        // Add layers that we need to the map
                        var streets = L.tileLayer.Unwired({key: key, scheme: "streets"});

                        // Initialize the map


                        function showPosition(position) {
                            console.log(position.coords.latitude +" "+position.coords.longitude);

                            var map = L.map('map', {
                                center: [position.coords.latitude, position.coords.longitude], //map loads with this location as center
                                zoom: 15,
                                layers: [streets] // Show 'streets' by default
                            });



                            // Add the 'scale' control
                            L.control.scale().addTo(map);

                            // Add the 'layers' control
                            L.control.layers({
                                "Streets": streets
                            }).addTo(map);

                            var popup = L.popup();

                            function onMapClick(e) {
                                popup.setLatLng(e.latlng)
                                        .setContent("You clicked the map at " + e.latlng.toString())
                                        .openOn(map);

                                document.getElementById('location').setAttribute("value", e.latlng.toString());
                            }

                            map.on('click', onMapClick);

                        }

                    </script>

                    <input type="text" id="location" name="location" hidden>

                    <div class="form-group">
                        <label for="filevalue">Add Picture or Video</label>
                        <input type="file" class="btn" id="image" name="image" accept="image/*,video/*" >
                    </div>

                    <!--<div style="margin-bottom: 2%;">-->
                        <!--75% Completed <span class="pull-right">Please wait...</span>-->
                        <!--<div class="progress">-->
                            <!--<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>-->
                        <!--</div>-->
                    <!--</div>-->

                    <div class="form-actions" style="text-align: right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-color">Save changes</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
