<div class="content" style="margin-top: 5%;">
    <div class="container settings">
        <div class="row">
            <div class="col-md-12 setting_div">
                <h3 style="text-align: center">Edit Journal</h3>
                {{#if updateError}}
                <p class="error">Error occur while updating your Profile</p>
                {{/if}}
                <form method="post" action="/">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp" value={{ Data.Title }}>

                    </div>

                    <div class="form-group">
                        <label for="email">Description</label>
                        <textarea type="text" class="form-control" cols="60" rows="5">{{ Data.Description }}</textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Select type</label>
                        <select class="form-control" id="exampleFormControlSelect2">
                            <option>Within City Trips</option>
                            <option>Out of City Trips</option>
                            <option>Out of State Trips</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="filevalue">Add Picture or Video</label>
                        <input type="file" class="btn" id="filevalue">
                    </div>


                    <button type="submit" class="btn btn-color">Update Profile</button>
                </form>

            </div>
        </div>

    </div>


</div>

